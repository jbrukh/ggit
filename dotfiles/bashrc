#!/usr/bin/env bash

PROJECT=$GOPATH/src/github.com/jbrukh/ggit
cd $PROJECT
export PATH=$GOPATH/bin:$PATH

# not necessary if you're using the git hook
# at https://github.com/jbrukh/git-gofmt or
# if you have GoSublime for Sublime Text 2
alias gf="gofmt -tabs=false -tabwidth=4 -w *.go"

# the most up-to-date ggit command
alias gg="go run $GOPATH/src/github.com/jbrukh/ggit/cmd/ggit/*.go"
alias ggbuild="go install -v ./... && go test ./..."
alias ggtest="go test -v ./..."
alias ggbench="go test -file api/benchmarks_test.go -test.bench=\".*\" ./api"

ggbench-csv() {
	SHA=`git rev-parse HEAD`
	ggbench | grep Benchmark | sed -E -e "s/[ 	]+/,/g" | sed "s/^/$SHA,/g"
}

# list some objects... this is slow, so use on small repos
objects() {
    for o in `ggit ls-objects`; do echo $o `ggit cat-file -t $o`; done
}

compare() {
	echo "GIT ==========================="
	git "$@"
	echo "GGIT =========================="
	ggit "$@"
	echo "==============================="
}

ggtime() {
	echo "GIT ==========================="
	time git "$@" 2>&1 >/dev/null
	echo "GGIT =========================="
	time ggit "$@" 2>&1 >/dev/null
	echo "==============================="
}
	
